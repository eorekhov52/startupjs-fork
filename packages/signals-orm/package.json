{
  "name": "@startupjs/signals-orm",
  "version": "0.56.0-alpha.64",
  "description": "Deep signals with ORM and real-time collaboration",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./server": "./server.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "npm run test-server && npm run test-client",
    "test-server": "node --expose-gc -r ./test/_init.cjs --test",
    "test-server-only": "node --expose-gc -r ./test/_init.cjs --test --test-only",
    "test-client": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest"
  },
  "dependencies": {
    "@nx-js/observer-util": "^4.1.3",
    "@startupjs/cache": "^0.56.0-alpha.0",
    "@startupjs/debug": "^0.56.0-alpha.0",
    "@startupjs/utils": "^0.56.0-alpha.64",
    "diff-match-patch": "^1.0.5",
    "json0-ot-diff": "^1.1.2",
    "lodash": "^4.17.20",
    "sharedb": "^4.1.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^15.0.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sharedb-mingo-memory": "^3.0.1"
  },
  "peerDependencies": {
    "react": "*"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "jsdom",
    "testRegex": "test_browser/.*\\.jsx?$",
    "testPathIgnorePatterns": [
      "node_modules",
      "<rootDir>/test_browser/helpers"
    ]
  },
  "license": "MIT"
}
