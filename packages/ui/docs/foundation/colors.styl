.colorCard
  margin-top 2u
  width 17u
  align-items center

  &Demo
    width 17u
    height 10u
    box-shadow 1px 1px 3px rgba(0,0,0,.24)

    &White
      background-color var(--colors-white, $UI.colors.white)
    &Dark
      background-color var(--colors-dark, $UI.colors.dark)
    &Primary
      background-color var(--colors-primary, $UI.colors.primary)
    &Success
      background-color var(--colors-success, $UI.colors.success)
    &Warning
      background-color var(--colors-warning, $UI.colors.warning)
    &Error
      background-color var(--colors-error, $UI.colors.error)

  &Hex
    background-color #eaeaec
    padding 1u
    margin-top 1u
    width 10u
    text-align center

  &Variable
    margin-top 1u
