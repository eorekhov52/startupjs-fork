.root
  position absolute
  width 100%

  +from($UI.media.mobile)
    max-width 40u
    min-width 30u
    padding-right 2u
    padding-top 2u

.toast
  padding 2u
  justify-content center
  border-radius .5u
  background-color var(--colors-white, $UI.colors.white)
  border-top-width 4px
  border-top-style solid
  shadow(2)

  &.info
    border-top-color var(--colors-primary, $UI.colors.primary)

  &.error
    border-top-color var(--colors-error, $UI.colors.error)

  &.warning
    border-top-color var(--colors-warning, $UI.colors.warning)

  &.success
    border-top-color var(--colors-success, $UI.colors.success)

.text
  margin-top 1u

.title
  margin-left 1u

  &.info
    color var(--colors-primary, $UI.colors.primary)

  &.error
    color var(--colors-error, $UI.colors.error)

  &.warning
    color var(--colors-warning, $UI.colors.warning)

  &.success
    color var(--colors-success, $UI.colors.success)

.icon
  &.info
    color var(--colors-primary, $UI.colors.primary)

  &.error
    color var(--colors-error, $UI.colors.error)

  &.warning
    color var(--colors-warning, $UI.colors.warning)

  &.success
    color var(--colors-success, $UI.colors.success)

.actions
  margin-top 1u
  justify-content flex-end
