.root
  padding 1u 2u
  border-width 1px
  justify-content space-between
  radius()

  &.info
    border-color var(--color-border-error)
    background-color var(--colors-primaryLightest)

  &.error
    border-color var(--colors-error)
    background-color var(--colors-errorLightest)

  &.warning
    border-color var(--colors-warning)
    background-color var(--colors-warningLightest)

  &.success
    border-color var(--colors-success)
    background-color var(--colors-successLightest)

// we align height by actions
// since info block has height less small button
.information
  padding 2px 0
  flex-shrink 1

.icon
  flex-shrink 0

  &.info
    color var(--colors-primary)

  &.error
    color var(--colors-error)

  &.warning
    color var(--colors-warning)

  &.success
    color var(--colors-success)

.content
  flex-shrink 1

  &.indent
    margin-left 1.5u

.actions
  flex-shrink 0
  margin-left 2u
