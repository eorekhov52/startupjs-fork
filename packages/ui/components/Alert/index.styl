.root
  padding 1u 2u
  border-width 1px
  justify-content space-between
  radius()

  &.info
    border-color var(--colors-primary, $UI.colors.primary)
    background-color var(--colors-primaryLightest, $UI.colors.primaryLightest)

  &.error
    border-color var(--colors-error, $UI.colors.error)
    background-color var(--colors-errorLightest, $UI.colors.errorLightest)

  &.warning
    border-color var(--colors-warning, $UI.colors.warning)
    background-color var(--colors-warningLightest, $UI.colors.warningLightest)

  &.success
    border-color var(--colors-success, $UI.colors.success)
    background-color var(--colors-successLightest, $UI.colors.successLightest)

// we align height by actions
// since info block has height less small button
.information
  padding 2px 0
  flex-shrink 1

.icon
  flex-shrink 0

  &.info
    color var(--colors-primary, $UI.colors.primary)

  &.error
    color var(--colors-error, $UI.colors.error)

  &.warning
    color var(--colors-warning, $UI.colors.warning)

  &.success
    color var(--colors-success, $UI.colors.success)

.content
  flex-shrink 1

  &.indent
    margin-left 1.5u

.actions
  flex-shrink 0
  margin-left 2u
