.select
  background-color var(--colors-white, $UI.colors.white)
  height 4u
  border-radius .5u
  border-style solid
  border-width 1px
  border-color var(--colors-darkLighter, $UI.colors.darkLighter)
  padding 0 1u
  align-items center
  justify-content space-between
  min-width 150

.placeholder
  color var(--colors-darkLighter, $UI.colors.darkLighter)

.active
  color var(--colors-dark, $UI.colors.dark)
