.shortName
  color var(--colors-darkLight, $UI.colors.darkLight)
  font(caption)

.label
  font(caption)

.labelMute
  color var(--colors-darkLight, $UI.colors.darkLight)

.labelActive
  color var(--colors-white, $UI.colors.white)

.cell
  justify-content center
  align-items center
  width 4u
  height 4u
  margin .5u
  radius(circle)

.cellActive
  background-color var(--colors-primary, $UI.colors.primary)

.cellActiveRangeStart
  border-top-right-radius 0
  border-bottom-right-radius 0
  background-color var(--colors-primary, $UI.colors.primary)

.cellActiveRangeEnd
  border-top-left-radius 0
  border-bottom-left-radius 0
  background-color var(--colors-primary, $UI.colors.primary)

.cellActiveRange
  border-radius 0
  background-color var(--colors-primaryLight, $UI.colors.primaryLight)

.cellHover
  background-color var(--colors-primaryLighter, $UI.colors.primaryLighter)

.row
  justify-content center

  +from($UI.media.tablet)
    justify-content flex-start
