.item
  min-width 4u
  height 4u
  align-items center
  justify-content center
  padding-left 1u
  padding-right @padding-left

.page
  &.selected
    color: var(--colors-primary, $UI.colors.primary)

.status
  margin-left 1u
  margin-right @margin-left

.icon
  color: var(--colors-dark, $UI.colors.dark)

  &.disabled
    color: var(--colors-darkLighter, $UI.colors.darkLighter)
