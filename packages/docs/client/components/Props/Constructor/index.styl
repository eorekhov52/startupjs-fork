$input = var(--colors-darkLight, $UI.colors.darkLight)
$thead = var(--colors-darkLight, $UI.colors.darkLight)
$header = var(--colors-secondaryText, $UI.colors.secondaryText)
$darkHeader = var(--colors-whiteLight, $UI.colors.whiteLight)
$value = var(--colors-success, $UI.colors.success)
$type = var(--colors-additional1, $UI.colors.additional1)
$valueDark = var(--colors-successLight, $UI.colors.successLight)
$typeDark = var(--colors-additional1Light, $UI.colors.additional1Light)

.input
  background-color white
  border-color $input
  border-width 1px
  padding 0 0.5u

.header
  font-size 12px
  letter-spacing 1px
  fontFamily('normal', 600)
  color $header
  &.right
    text-align right

.possibleValue
  flex-direction row

.value
  color $value
  font-style italic

.type
  color $type
  font-style italic

.dark
  &.header
    color $darkHeader
  &.value
    color $valueDark
  &.type
    color $typeDark

.checkbox
  align-self flex-end

.unsupported
  color var(--colors-secondaryText, $UI.colors.secondaryText)
  text-align right

.separator
  color var(--colors-darkLighter, $UI.colors.darkLighter)

.vCenter
  justify-content center

.required
  margin-top 0.5u
  align-self flex-start

.badJSON
  color: var(--colors-error, $UI.colors.error)
